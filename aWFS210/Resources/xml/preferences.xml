<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    
<PreferenceCategory android:title="Settings">
    <EditTextPreference
        android:defaultValue="WFS210"
        android:key="WIFINAME"
        android:summary="This will set the name of the wifi scope"
        android:title="Name of the wifi scope" />
    <CheckBoxPreference
        android:key="DEMO"
        android:summary="Enables the Demo mode"
        android:title="Demo mode" />
  <CheckBoxPreference
        android:key="MARKERS"
        android:summaryOff="This will hide the markers"
        android:summaryOn="This will show the markers"
        android:title="Show Markers" />
</PreferenceCategory>

<PreferenceCategory android:title="Calibration">
    <CheckBoxPreference
        android:key="CALIBRATE"
        android:title="Request Calibration" 
        android:summary="Check it to request a calibration"/>
</PreferenceCategory>

<PreferenceCategory android:title="Versions">
    <Preference
        android:key="VERSIONNUMBERSCOPE"
        android:title="Firmware Version" />
    <Preference
        android:key="VERSIONNUMBERWIFI"
        android:title="Wifi Firmware Version" 
        android:summary=""/>
    <Preference
        android:key="APPVERSION"
        android:title="App Version" 
        android:summary=""
        android:defaultValue="1.2"/>
</PreferenceCategory>
</PreferenceScreen>